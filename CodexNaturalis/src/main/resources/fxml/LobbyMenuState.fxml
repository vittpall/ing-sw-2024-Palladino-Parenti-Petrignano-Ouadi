<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane styleClass="scene-dimensions,scene-background"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../styles.css"
            fx:controller="it.polimi.ingsw.gui.Controller.LobbyMenuController">
    <StackPane styleClass="scene-dimensions,scene-background">
        <VBox alignment="CENTER" spacing="10">
            <Label prefHeight="75.0" prefWidth="176.0"
                   style="-fx-font-size: 30px; -fx-font-family: 'Book Antiqua'; -fx-text-fill: #333333;"
                   text="Lobby Menu"
                   textAlignment="JUSTIFY"/>
            <Label prefHeight="21.0" prefWidth="165.0"
                   style="-fx-font-size: 16px; -fx-font-family: 'Book Antiqua'; -fx-text-fill: #555555;"
                   text="Please select an option:"/>

            <Button onAction="#handleCreateGame" styleClass="primary-button" style="-fx-background-color: #a2ecbb;"
                    text="Create a new game"/>
            <Button onAction="#handleJoinGame" styleClass="primary-button" style="-fx-background-color: #a6f84b;"
                    text="Join a game "/>
        </VBox>
    </StackPane>
    <!-- Top-left Corner -->
    <ImageView rotate="180" scaleX="-1" styleClass="corner-image" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
    </ImageView>

    <!-- Top-Right Corner -->
    <ImageView rotate="180" styleClass="corner-image" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    </ImageView>

    <!-- Bottom-Left Corner -->
    <ImageView styleClass="corner-image" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
    </ImageView>

    <!-- Bottom-Right Corner -->
    <ImageView scaleX="-1" styleClass="corner-image" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
    </ImageView>
</AnchorPane>
