<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.gui.Controller.LobbyMenuController">

    <Label layoutX="234.0" layoutY="37.0" style="-fx-font-size: 24px; -fx-font-family: 'Arial'; -fx-text-fill: #333333;"
           text="Lobby Menu"/>
    <Label layoutX="205.0" layoutY="83.0" prefWidth="190.0"
           style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-text-fill: #555555;"
           text="Please select an option:"/>

    <Button onAction="#handleCreateGame" layoutX="200.0" layoutY="132.0" prefHeight="40" prefWidth="200"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-size: 14px;"
            text="Create a new game"/>
    <Button onAction="#handleJoinGame" layoutX="201.0" layoutY="200.0" prefHeight="40" prefWidth="200"
            style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-size: 14px;"
            text="Join a game "/>
</AnchorPane>
