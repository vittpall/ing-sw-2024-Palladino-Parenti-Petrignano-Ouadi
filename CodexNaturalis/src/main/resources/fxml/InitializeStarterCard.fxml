<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      spacing="20" alignment="CENTER">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Play Your Starter Card:" style="-fx-font-size: 16px;"/>
    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER">
            <Label text="Front:"/>
            <ImageView fx:id="frontImageView" fitWidth="100" fitHeight="150" preserveRatio="true"/>
            <Button fx:id="playFrontButton" text="Play Front" onAction="#handlePlayFront"/>
        </VBox>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Back:"/>
            <ImageView fx:id="backImageView" fitWidth="100" fitHeight="150" preserveRatio="true"/>
            <Button fx:id="playBackButton" text="Play Back" onAction="#handlePlayBack"/>
        </VBox>
    </HBox>
</VBox>
