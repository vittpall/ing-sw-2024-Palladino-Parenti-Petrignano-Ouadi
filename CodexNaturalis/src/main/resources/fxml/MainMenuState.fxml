<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane styleClass="scene-dimensions,scene-background" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gui.Controller.MainMenuStateController">
    <StackPane styleClass="scene-dimensions,scene-background">
        <VBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="235.0" fitWidth="251.0" pickOnBounds="true" smooth="false">
                <Image url="@../Images/LogoCodexNaturalis.jpg"/>
                <VBox.margin>
                    <Insets top="-100"/> <!-- Negative margin to move the image a bit higher than center -->
                </VBox.margin>
            </ImageView>
            <Label text="Before playing, choose a username">
                <font>
                    <Font name="Book Antiqua" size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="usernameField" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="19.0"
                       prefWidth="200.0" promptText="Enter your username here"/>
            <Label fx:id="errorLabel" managed="false" prefHeight="26.0" prefWidth="200.0" textAlignment="JUSTIFY"
                   textFill="red">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Button fx:id="playButton" onAction="#handlePlayButton" styleClass="primary-button" text="Play"/>
        </VBox>
    </StackPane>
    <!-- Top-left Corner -->
    <ImageView rotate="180" scaleX="-1" styleClass="corner-image" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
    </ImageView>

    <!-- Top-Right Corner -->
    <ImageView rotate="180" styleClass="corner-image" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    </ImageView>

    <!-- Bottom-Left Corner -->
    <ImageView styleClass="corner-image" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
    </ImageView>

    <!-- Bottom-Right Corner -->
    <ImageView scaleX="-1" styleClass="corner-image" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
    </ImageView>
</AnchorPane>
